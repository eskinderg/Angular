{
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always",
    "bracketSameLine": true,
    "jsxSingleQuote": false,
    "printWidth": 110,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "angular"
            }
        },
        {
            "files": "*.scss",
            "options": {
                "parser": "scss"
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json-stringify"
            }
        }
    ]
}