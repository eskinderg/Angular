{
    "extends": [
        "stylelint-config-standard-scss"
    ],
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "color-no-invalid-hex": true,
        "scss/load-no-partial-leading-underscore": true,
        "no-empty-source": null,
        "font-family-no-missing-generic-family-keyword": [
            true,
            {
                "ignoreFontFamilies": [
                    "icomoon"
                ]
            }
        ]
    }
}